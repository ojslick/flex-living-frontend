		return (
			<PropertyContainer>
				<ErrorMessage>
					{error}
					<button
						onClick={loadReviews}
						style={{
							marginTop: '16px',
							padding: '8px 16px',
							backgroundColor: FlexLivingTheme.colors.primary,
							color: 'white',
							border: 'none',
							borderRadius: FlexLivingTheme.radii.md,
							cursor: 'pointer',
						}}
					>
						Retry
					</button>
				</ErrorMessage>
			</PropertyContainer>
		);
